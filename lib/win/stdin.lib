var EOF      = 0xffffffffffffffff;
var STDIN    = 0;
var STDOUT   = 1;
var STDERR   = 2;
var SEEK_SET = 0;
var SEEK_CUR = 1;
var SEEK_END = 2;
var L_tmpnam = 100;

fun has_data(file)
{
    fseek(file, 0, SEEK_END);
    if ( ftell(file) > 0) return true;
    return false;
}
